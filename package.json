{
  "name": "react-native-npm-version",
  "version": "1.0.0",
  "private": true,
  "description": "Example of React-Native application with version from package.json and npm version bump.",
  "main": "index.js",
  "scripts": {
    "version": "node ./scripts/version.js && [[ $(git status --porcelain -z | awk '/version.json/ && /Info.plist/' ) ]] && git add version.json ios/npmversion/Info.plist",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szhigunov/react-native-npm-version.git"
  },
  "keywords": [
    "react-native",
    "example",
    "versioning"
  ],
  "author": "",
  "license": "GPL",
  "bugs": {
    "url": "https://github.com/szhigunov/react-native-npm-version/issues"
  },
  "homepage": "https://github.com/szhigunov/react-native-npm-version#readme",
  "dependencies": {
    "react": "15.4.2",
    "react-native": "0.41.2"
  },
  "devDependencies": {
    "babel-jest": "19.0.0",
    "babel-preset-react-native": "1.9.1",
    "jest": "19.0.0",
    "plist": "^2.0.1",
    "react-test-renderer": "15.4.2",
    "semver": "^5.3.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
